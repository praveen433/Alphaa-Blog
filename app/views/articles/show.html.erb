<h1>Showing selected Article <h1>
  <p>
    Titile = <%= @article.title %>
  </p>

  <p>
    Description = <%= @article.description %>
  </p>
  <div class = "article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admit?) %>
  <%= link_to "Edit this article", edit_article_path(@article),class: "btn btn-xs btn-success" %>
  <%= link_to "Delete this article", article_path(@article), method: :delete,
                                     data: {confirm: "Are you sure to delete this article?"},
                                     class: "btn btn-xs btn-danger" %>
    <% end %>
  <%= link_to "Back to Listings", articles_path,class: "btn btn-xs btn-success" %>
    </div>